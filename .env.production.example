# Production Environment Variables for VPS Deployment
# Copy this file to .env and fill in the values

# ============ DATABASE ============
# MySQL on the VPS
DATABASE_URL="mysql://user:password@localhost:3306/tradeline_db"

# ============ SECURITY ============
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_change_this
SESSION_SECRET=your_session_secret_change_this

# ============ STRIPE ============
STRIPE_SECRET_KEY=sk_live_xxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxx

# ============ OPENAGI LUX ============
# Get from https://developer.agiopen.org/
OAGI_API_KEY=sk-your_openagi_api_key

# ============ TRADELINE SUPPLY ============
# Broker credentials (used by Lux for automation context)
TRADELINE_BROKER_LOGIN_URL=https://tradelinesupply.com/login-create-an-account/
TRADELINE_BROKER_LOGIN_ID=your_broker_email@example.com
TRADELINE_BROKER_PASSWORD=your_broker_password
TRADELINE_ORDERS_URL=https://tradelinesupply.com/pricing

# ============ SERVER ============
NODE_ENV=production
PORT=3000
LUX_WORKER_URL=http://lux-worker:8765
LUX_SOCKET_URL=ws://lux-worker:8765

# ============ DOMAIN ============
DOMAIN=tradelinerental.com
