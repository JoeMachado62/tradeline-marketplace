<%- contentFor('html_attribute') %>

  <%- contentFor('body_attribute') %>

    <%- contentFor('extra_css') %>
      <link rel="stylesheet" href="/widget/tradeline-widget.css?v=<%= Date.now() %>">
      <style>
        #tradeline-widget {
          min-height: 600px;
          background: #fff;
          border-radius: 12px;
          box-shadow: 0 4px 24px rgba(0, 0, 0, 0.05);
          padding: 20px;
          margin-top: 30px;
        }

        .inner-pages-section-area {
          padding: 100px 0;
        }

        /* Hide the default widget button */
        .fw-widget-button,
        button.fw-widget-button {
          display: none !important;
          visibility: hidden !important;
          opacity: 0 !important;
          pointer-events: none !important;
        }

        /* Ensure widget popup is on top of everything */
        .fw-widget-container,
        .fw-widget-overlay,
        div[class*="fw-widget"] {
          z-index: 2147483647 !important;
        }
      </style>
      <style>
        .homepage3-body .vl-transparent-header .row-bg {
          background: rgba(0, 0, 0, 0.3) !important;
          border-color: rgba(255, 255, 255, 0.15) !important;
        }
      </style>

      <%- contentFor('content') %>
        <%- include('partials/header/navbar3') %>

          <!-- ===== HERO AREA STARTS ======= -->
          <div class="inner-pages-section-area"
            style="background-image: url(/img/all-images/bg/hero-bg1.png); background-position: center; background-repeat: no-repeat; background-size: cover;">
            <div class="container">
              <div class="row">
                <div class="col-lg-12 m-auto">
                  <div class="inner-header text-center">
                    <h2 class="text-anime-style-3">Inventory & Pricing</h2>
                    <div class="space24"></div>

                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- ===== HERO AREA ENDS ======= -->

          <!-- ===== INVENTORY AREA STARTS ======= -->
          <div class="inventory-section-area sp2">
            <div class="container">
              <div class="row">
                <div class="col-lg-12">
                  <div class="heading3 text-center">
                    <h5>Our Current Inventory</h5>
                    <div class="space16"></div>
                    <h2 class="text-anime-style-3">Find the Perfect Tradeline for Your Credit Profile</h2>
                    <p class="mt-3">Browse our verified, high-limit tradelines below. Add items to your cart and proceed
                      to checkout to begin your credit success journey.</p>
                  </div>

                  <!-- Savings Banner -->
                  <div class="mb-4" style="margin-bottom: 24px;">
                    <img src="/img/savings_banner.jpg" alt="Volume Purchase Discounts"
                      style="width: 100%; height: auto; border-radius: 12px; display: block;">
                  </div>

                  <!-- The Tradeline Widget will be mounted here -->
                  <div id="tradeline-widget">
                    <div class="text-center p-5">
                      <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading Inventory...</span>
                      </div>
                      <p class="mt-3">Loading our latest tradeline inventory...</p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- ===== INVENTORY AREA ENDS ======= -->

          <!-- ===== PRICING AREA STARTS ======= -->
