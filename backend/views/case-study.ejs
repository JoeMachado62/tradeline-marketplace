<%- contentFor('html_attribute') %>

  <%- contentFor('body_attribute') %>
    class="homepage3-body"

    <%- contentFor('extra_css') %>
      <style>
        /* Navbar transparency adjustment for case study page */
        .homepage3-body .vl-transparent-header .row-bg {
          background: rgba(0, 0, 0, 0.5) !important;
        }

        .case-study-hero {
          background: linear-gradient(135deg, #061D19 0%, #0c3831 100%);
          padding: 160px 0 80px;
          position: relative;
          overflow: hidden;
        }

        .case-study-hero::before {
          content: '';
          position: absolute;
          top: 0;
          left: 0;
          right: 0;
          bottom: 0;
          background: url('/img/all-images/bg/hero-bg1.png') center/cover no-repeat;
          opacity: 0.15;
          pointer-events: none;
        }

        .case-study-hero::after {
          content: '';
          position: absolute;
          top: -50%;
          right: -20%;
          width: 600px;
          height: 600px;
          background: rgba(255, 255, 255, 0.03);
          border-radius: 50%;
          pointer-events: none;
        }

        .case-study-hero .container {
          position: relative;
          z-index: 2;
        }

        .case-study-hero .category-badge {
          display: inline-block;
          background: rgba(244, 212, 69, 0.2);
          color: #F4D445;
          padding: 10px 24px;
          border-radius: 50px;
          font-size: 14px;
          font-weight: 600;
          text-transform: uppercase;
          letter-spacing: 1.5px;
          margin-bottom: 24px;
          border: 1px solid rgba(244, 212, 69, 0.3);
        }

        .case-study-hero h1 {
          color: #fff;
          font-size: 52px;
          font-weight: 700;
          line-height: 1.15;
          margin-bottom: 24px;
          max-width: 800px;
        }

        .case-study-hero .hero-quote {
          color: rgba(255, 255, 255, 0.8);
          font-size: 20px;
          font-style: italic;
          line-height: 1.6;
          max-width: 700px;
          margin: 0;
        }

        .case-study-content {
          padding: 100px 0;
          background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
        }

        .case-study-content .highlight-quote {
          background: linear-gradient(135deg, #061D19 0%, #0c3831 100%);
          border-left: 5px solid #F4D445;
          padding: 40px 50px;
          margin: 0 0 50px;
          border-radius: 0 16px 16px 0;
          font-size: 24px;
          font-style: italic;
          color: #fff;
          line-height: 1.6;
          position: relative;
          box-shadow: 0 20px 50px rgba(6, 29, 25, 0.2);
        }

        .case-study-content .highlight-quote::before {
          content: '"';
          position: absolute;
          top: 20px;
          left: 20px;
          font-size: 80px;
          color: rgba(244, 212, 69, 0.3);
          font-family: Georgia, serif;
          line-height: 1;
        }

        .case-study-section {
          margin-bottom: 50px;
          padding: 40px;
          background: #fff;
          border-radius: 16px;
          box-shadow: 0 10px 40px rgba(0, 0, 0, 0.06);
          transition: transform 0.3s, box-shadow 0.3s;
        }

        .case-study-section:hover {
          transform: translateY(-5px);
          box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
        }

        .case-study-section h3 {
          color: #061D19;
          font-size: 28px;
          font-weight: 700;
          margin-bottom: 20px;
          display: flex;
          align-items: center;
          gap: 18px;
        }

        .case-study-section h3 .icon {
          width: 56px;
          height: 56px;
          background: linear-gradient(135deg, #061D19 0%, #0c3831 100%);
          border-radius: 14px;
          display: flex;
          align-items: center;
          justify-content: center;
          color: #F4D445;
          font-size: 22px;
          flex-shrink: 0;
        }

        .case-study-section p {
          font-size: 18px;
          line-height: 1.9;
          color: #4a5568;
          margin: 0;
        }

        .case-study-cta {
          background: linear-gradient(135deg, #061D19 0%, #0c3831 100%);
          padding: 70px 60px;
          border-radius: 24px;
          text-align: center;
          margin-top: 60px;
          position: relative;
          overflow: hidden;
        }

        .case-study-cta::before {
          content: '';
          position: absolute;
          top: -100px;
          right: -100px;
          width: 300px;
          height: 300px;
          background: rgba(244, 212, 69, 0.1);
          border-radius: 50%;
          pointer-events: none;
        }

        .case-study-cta h3 {
          color: #fff;
          font-size: 36px;
          margin-bottom: 16px;
          font-weight: 700;
          position: relative;
          z-index: 1;
        }

        .case-study-cta p {
          color: rgba(255, 255, 255, 0.85);
          font-size: 18px;
          margin-bottom: 35px;
          position: relative;
          z-index: 1;
        }

        .case-study-cta .vl-btn3 {
          background: #F4D445;
          color: #061D19;
          padding: 18px 45px;
          font-weight: 700;
          font-size: 16px;
          border-radius: 8px;
          display: inline-block;
          text-decoration: none;
          transition: all 0.3s;
          position: relative;
          z-index: 1;
        }

        .case-study-cta .vl-btn3:hover {
          background: #fff;
          transform: translateY(-3px);
          box-shadow: 0 10px 30px rgba(244, 212, 69, 0.4);
        }

        .back-link {
          display: inline-flex;
          align-items: center;
          gap: 10px;
          color: rgba(255, 255, 255, 0.7);
          text-decoration: none;
          margin-bottom: 30px;
          transition: color 0.3s;
          font-size: 15px;
        }

        .back-link:hover {
          color: #F4D445;
        }

        @media (max-width: 768px) {
          .case-study-hero {
            padding: 140px 0 60px;
          }

          .case-study-hero h1 {
            font-size: 32px;
          }

          .case-study-content {
            padding: 60px 0;
          }

          .case-study-content .highlight-quote {
            font-size: 18px;
            padding: 25px 30px;
          }

          .case-study-section {
            padding: 25px;
          }

          .case-study-cta {
            padding: 40px 25px;
          }
        }
      </style>

      <%- contentFor('content') %>
        <%- include('partials/header/navbar3') %>

          <!-- Hero Section -->
          <div class="case-study-hero">
            <div class="container">
              <a href="/" class="back-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                  stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M19 12H5M12 19l-7-7 7-7" />
                </svg>
                Back to Home
              </a>
              <span class="category-badge">
                <%= caseStudy.category %>
              </span>
              <h1>
                <%= caseStudy.title %>
              </h1>
              <p class="hero-quote">"<%= caseStudy.quote %>"</p>
            </div>
          </div>

          <!-- Content Section -->
          <div class="case-study-content">
            <div class="container">
              <div class="row">
                <div class="col-lg-10 m-auto">

                  <div class="case-study-section">
                    <h3>
                      <span class="icon"><i class="fa-solid fa-flag"></i></span>
                      The Challenge
                    </h3>
                    <p>
                      <%= caseStudy.challenge %>
                    </p>
                  </div>

                  <div class="case-study-section">
                    <h3>
                      <span class="icon"><i class="fa-solid fa-lightbulb"></i></span>
                      The Solution
                    </h3>
                    <p>
                      <%= caseStudy.solution %>
                    </p>
                  </div>

                  <div class="case-study-section">
                    <h3>
                      <span class="icon"><i class="fa-solid fa-trophy"></i></span>
                      The Result
                    </h3>
                    <p>
                      <%= caseStudy.result %>
                    </p>
                  </div>

                  <div class="case-study-cta">
                    <h3>Ready to Write Your Success Story?</h3>
                    <p>Join thousands of clients who have transformed their credit and achieved their financial goals.
                    </p>
                    <a href="/contact" class="vl-btn3">Get Started Today</a>
                  </div>
                </div>
              </div>
            </div>
          </div>